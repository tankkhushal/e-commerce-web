<%- include('../Layout/Header.ejs') %>

    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <h1 class="m-0">Extra Category</h1>
                    </div>
                    <div class="col-sm-12">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Add Extra Category</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Extra Category</h3>
                            </div>
                            <form method="post" action="/category/SubCategory/extracategory/InsertExtraCategory">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Category</label>
                                        <div class="col-md-12">
                                            <select class="form-select form-control" name="categoryId" id="categoryId">
                                                <option value="">--Select Category--</option>
                                                <% CategiryList.map((v,i)=>{ %>
                                                    <option value="<%= v.id %>">
                                                        <%= v.category %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 col-form-label">Sub Category</label>
                                        <div class="col-md-12">
                                            <select class="form-select form-control" name="subcategoryId" id="subCatgroryId">
                                                <option value="">--Select Category--</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Extra Category</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1"
                                            placeholder="Enter the extra category" name="extracategory">
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>    
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>

    <%- include('../Layout/Footer.ejs') %>

    <script>
        document.querySelector('#categoryId').addEventListener('change',(e)=>{
            let ihtml = '<option value="">--Select Category--</option>';
            let allSubCat = JSON.parse(`<%- JSON.stringify(SubCategiryList) %>`);
            console.log(allSubCat)
            allSubCat.map((item)=>{
                if(item.categoryId==e.target.value){
                    ihtml+= `<option value="${item._id}">
                    ${item.subcategory}
                </option>`
                }
            })

           document.querySelector('#subCatgroryId').innerHTML = ihtml;
        })
    </script>